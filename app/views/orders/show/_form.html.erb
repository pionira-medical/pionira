<div class="modal fade" id="orderForm">
  <div class="modal-dialog">
    <%= form_for(@order,remote: true, html: {class: 'modal-content form-horizontal', role: 'form'}) do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Auftrag bearbeiten</h4>
      </div>
      <div class="modal-body" style="padding-bottom: 0px;">
        <div class="form-group">
          <%= f.label(:reference, t('orders.sign_in.reference_label'), class: "col-sm-4 control-label") %>
          <div class="col-sm-8">
            <%= f.text_field(:reference, class: 'form-control', placeholder: t('orders.sign_in.reference_placeholder')) %>
            <span class="help-block"><%= t('orders.sign_in.reference_hint') %></span>
          </div>
        </div>
        <div class="form-group">
          <%= f.label(:phone, t('orders.sign_in.phone_label'), class: "col-sm-4 control-label") %>
          <div class="col-sm-8">
            <%= f.text_field(:phone, class: 'form-control', placeholder: t('orders.sign_in.phone_placeholder')) %>
            <span class="help-block"><%= t('orders.sign_in.phone_hint') %></span>
          </div>
        </div>
        <div class="form-group">
          <%= f.label(:email, t('orders.sign_in.email_label'), class: "col-sm-4 control-label") %>
          <div class="col-sm-8">
            <%= f.text_field(:email, class: 'form-control', placeholder: t('orders.sign_in.email_placeholder')) %>
            <span class="help-block"><%= t('orders.sign_in.email_hint') %></span>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Abbrechen</button>
        <%= f.submit(t('orders.sign_in.submit'), class: 'btn btn-primary') %>
      </div>
    <% end %>
  </div>
</div>